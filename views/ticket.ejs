<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Simple Ticket</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/css/common.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/css/ticket.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
        crossorigin="anonymous">
</head>

<body>
    <%-include('common/nav')-%>
    <div class="ticket-main">
        <form id='ticket' action="/ticket" method="POST">
            <div id="ticket-info">
                <label for="subject">Subject</label>
                <input type="text" name="subject" id='ticket-subject' onchange="return testFormObject('ticket')">
                <label for="description">Description</label>
                <textarea name="description" id="ticket-description" ></textarea>
            </div>
            <div id="ticket-options">
                <label for="priority">Priority</label>
                <select name="priority" id="ticket-priority">
                    <option value="High">High</option>
                    <option value="Medium">Medium</option>
                    <option value="Low">Low</option>
                </select>
                <label for="assignee">Assignee</label>
                <select name="assignee" id="ticket-assignee">
                    <option value="ray">Ray</option>
                    <option value="jack">Jack</option>
                </select>
                <fieldset>
                    <legend>Contact Details</legend>
                    <!-- create a validate function (add the case statement) to validate 3 fields, can't empty, is validate phone number, email address -->
                    <div>
                        <span id='contactName_msg'></span>
                        <div class='inputWithIcon'>
                            <i class="fas fa-user"></i>
                            <input type='text' name="contact[name]" placeholder="Your name" onchange="validateInput(this.name,this.type)" />
                            <i id='contactName_check' class="fas fa-check"></i>
                        </div>
                    </div>
                    <div>
                        <span id='contactPhone_msg'></span>
                        <div class='inputWithIcon'>
                            <i class="fas fa-envelope"></i>
                            <input type='text' name="contact[phone]" placeholder="Your phone" onchange="validateInput(this.name,this.type)" />
                            <i id='contactPhone_check' class="fas fa-check"></i>
                        </div>
                    </div>
                    <div>
                        <span id='contactEmail_msg'></span>
                        <div class='inputWithIcon'>
                            <i class="fas fa-phone"></i>
                            <input type='text' name="contact[email]" placeholder="Your Email" onchange="validateInput(this.name,this.type)" />
                            <i id='contactEmail_check' class="fas fa-check"></i>
                        </div>
                    </div>
                </fieldset>
                <button type="submit" value="Submit">Submit</button>
                <button onclick="e.preventDefault(); location.href='/'">Cancel</button>
                    <a href="/">Cancel</a>
            </div>
        </form>

    </div>
</body>
<script type="text/javascript" src='/assets/js/common.js'></script>

</html>