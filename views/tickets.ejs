<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>My Tickets</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/css/common.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/css/ticket.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
        crossorigin="anonymous">
</head>

<body>
    <%-include('common/nav')-%>
    <%-include('common/validationError')-%>
    <div class="ticket-main">
        <div id="tickets-menu">
            <ul>
                <li><a href="/ticket/newTicket"><i class="fas fa-plus-square"> <span>New</span> </i></a></li>
                <li><input type="text"><button>Search</button></li>

            </ul>
        </div>
        <div id='ticket-controls'>
            <table id="tickets-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Subject</th>
                        <th>Priority</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%if (tickets.length===0) {%>
                    <tr><td colspan="6">There is no Tickets</td></tr>
                    <%} else {%>
                    <% for(var i=0; i < tickets.length; i++) { %>
                    <tr>
                        <td>
                            <%= tickets[i].referenceNumber %>
                        </td>
                        <td class="toolTip">
                            <p>
                                <%= tickets[i].subject %>
                            </p>
                            <div class="toolTipText">
                                <P>
                                    <%= tickets[i].description %>
                                </P>
                                <div>
                        </td>
                        <td>
                            <%= tickets[i].priority %>
                        </td>
                        <td>
                            <%= tickets[i].contact.name %>
                        </td>
                        <td>
                            <%= tickets[i].status %>
                        </td>
                        <td><a href='/ticket/view/<%=tickets[i].id%>' id=<%=tickets[i].id%>>View</a>
                            <a href='/ticket/edit/<%=tickets[i].id%>' id=<%=tickets[i].id%>>Edit</a>
                        </td>
                    </tr>
                    <% } %>
                    <%}%>

                </tbody>
            </table>
            <div id='ticket-updates'>
                content
            </div>
        </div>


    </div>
</body>
<script type="text/javascript" src='/assets/js/common.js'></script>
<script type="text/javascript" src='/assets/js/ticket.js'></script>
<script type="text/javascript" src='/assets/js/validate.js'></script>

</html>